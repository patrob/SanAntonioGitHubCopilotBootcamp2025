@page "Delete/{id:guid}"
@model UrlListApp.Pages.UrlLists.DeleteModel
@{
    ViewData["Title"] = "Delete URL List";
}

<h1>Delete URL List</h1>

<h3>Are you sure you want to delete this list?</h3>
<div>
    <strong>@Model.UrlList?.Title</strong>
</div>

<form method="post">
    <input type="hidden" asp-for="UrlList.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
